@page "/foods/delete"
@using Microsoft.EntityFrameworkCore
@using FoodJournal.Entities
@inject IDbContextFactory<FoodJournal.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Food</h2>
    <hr />
    @if (food is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@food.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@food.Category</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Calories</dt>
            <dd class="col-sm-10">@food.Calories</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Protein</dt>
            <dd class="col-sm-10">@food.Protein</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Fat</dt>
            <dd class="col-sm-10">@food.Fat</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Carbs</dt>
            <dd class="col-sm-10">@food.Carbs</dd>
        </dl>
        <EditForm method="post" Model="food" OnValidSubmit="DeleteFood" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(food is null)">Delete</button> |
            <a href="/foods">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Food? food;

    [SupplyParameterFromQuery]
    private int FoodId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        food = await context.FoodItems.FirstOrDefaultAsync(m => m.FoodId == FoodId);

        if (food is null)
        {
            NavigationManager.NotFound();
        }
    }

    private async Task DeleteFood()
    {
        using var context = DbFactory.CreateDbContext();
        context.FoodItems.Remove(food!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/foods");
    }
}
